<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:fitsSystemWindows="true"
    tools:context=".ConfigActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/root_config"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:paddingBottom="16dp"
        android:paddingTop="32dp">

        <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/input_layout_text"
        style="@style/Widget.AYRUS.TextInputLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="@string/label_text_input"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edit_text_input"
            style="@style/Widget.AYRUS.TextInputEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:gravity="top|start"
            android:maxLines="4" />
        </com.google.android.material.textfield.TextInputLayout>

    <Spinner
        android:id="@+id/spinner_display_mode"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/input_layout_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/spinner_alignment"
        app:layout_constraintHorizontal_weight="1"
        android:layout_marginTop="16dp" />

    <Spinner
        android:id="@+id/spinner_alignment"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/input_layout_text"
        app:layout_constraintStart_toEndOf="@id/spinner_display_mode"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_weight="1"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp" />

    <Spinner
        android:id="@+id/spinner_font"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/spinner_display_mode"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <TextView
        android:id="@+id/label_text_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/label_text_size"
        android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
        app:layout_constraintTop_toBottomOf="@id/spinner_font"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp" />

    <SeekBar
        android:id="@+id/seek_text_size"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:max="80"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/label_text_size"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <LinearLayout
        android:id="@+id/container_speed"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/seek_text_size"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="12dp">

        <TextView
            android:id="@+id/label_speed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_speed"
            android:textAppearance="@style/TextAppearance.Material3.BodyMedium" />

        <SeekBar
            android:id="@+id/seek_speed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="4" />

        <LinearLayout
            android:id="@+id/container_animation_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="8dp">

            <TextView
                android:id="@+id/label_animation_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_animation_type"
                android:textAppearance="@style/TextAppearance.Material3.BodyMedium" />

            <Spinner
                android:id="@+id/spinner_animation_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/container_colors"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/container_speed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_text_color"
                android:textAppearance="@style/TextAppearance.Material3.BodyMedium" />

            <View
                android:id="@+id/view_text_color"
                android:layout_width="48dp"
                android:layout_height="24dp"
                android:background="@color/white"
                android:layout_marginTop="4dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_marginStart="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_background_color"
                android:textAppearance="@style/TextAppearance.Material3.BodyMedium" />

            <View
                android:id="@+id/view_background_color"
                android:layout_width="48dp"
                android:layout_height="24dp"
                android:background="@color/black"
                android:layout_marginTop="4dp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/container_toggles"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/container_colors"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp">

        <com.google.android.material.materialswitch.MaterialSwitch
            android:id="@+id/switch_loop"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/label_loop"
            android:checked="true" />

        <com.google.android.material.materialswitch.MaterialSwitch
            android:id="@+id/switch_random"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/label_random_style"
            android:layout_marginStart="8dp" />

        <com.google.android.material.materialswitch.MaterialSwitch
            android:id="@+id/switch_orientation_lock"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/label_orientation_lock"
            android:layout_marginStart="8dp" />

        <com.google.android.material.materialswitch.MaterialSwitch
            android:id="@+id/switch_text_shadow"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/label_text_shadow"
            android:layout_marginStart="8dp" />

        <com.google.android.material.materialswitch.MaterialSwitch
            android:id="@+id/switch_text_glow"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/label_text_glow"
            android:layout_marginStart="8dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/text_preview"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:minHeight="220dp"
        android:gravity="center"
        android:text="@string/preview_placeholder"
        android:textAppearance="@style/TextAppearance.Material3.DisplaySmall"
        android:background="@drawable/bg_premium_surface"
        android:textColor="@color/pixelplay_on_surface"
        android:letterSpacing="0.03"
        app:layout_constraintTop_toBottomOf="@id/container_toggles"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/container_buttons"
        android:layout_marginTop="24dp"
        android:padding="20dp" />

    <LinearLayout
        android:id="@+id/container_buttons"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="12dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_preview"
            style="@style/Widget.AYRUS.Button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/action_preview" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_save_preset"
            style="@style/Widget.AYRUS.Button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/action_save_preset"
            android:layout_marginStart="8dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_full_screen"
            style="@style/Widget.AYRUS.Button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/action_full_screen"
            android:layout_marginStart="8dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_surprise_me"
            style="@style/Widget.AYRUS.Button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/action_surprise_me"
            android:layout_marginStart="8dp" />
    </LinearLayout>

        <TextView
            android:id="@+id/watermark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@ made by suresurya"
            android:textColor="@color/pixelplay_on_surface_variant"
            android:textSize="12sp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>
