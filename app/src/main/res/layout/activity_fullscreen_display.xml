<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_fullscreen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_premium_gradient"
    android:paddingTop="24dp"
    android:paddingBottom="24dp"
    tools:context=".FullScreenDisplayActivity">

    <TextView
        android:id="@+id/text_fullscreen"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="42sp"
        android:textStyle="bold"
        android:fontFamily="@font/montserrat"
        android:letterSpacing="0.06"
        android:lineSpacingExtra="6dp"
        android:padding="32dp"
        tools:text="Sample Text" />

    <TextView
        android:id="@+id/text_gesture_hint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:gravity="center"
        android:text="@string/fullscreen_gesture_hint"
        android:textSize="12sp"
        android:textColor="@color/white"
        android:alpha="0.9"
        android:padding="8dp" />

    <TextView
        android:id="@+id/watermark_fullscreen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="16dp"
        android:background="@drawable/bg_premium_watermark"
        android:padding="8dp"
        android:text="@ made by suresurya"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:textStyle="bold"
        android:alpha="0.8" />

</FrameLayout>
