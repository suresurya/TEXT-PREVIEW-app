<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="Theme.AYRUS" parent="Theme.Material3.Dark.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/pixelplay_primary</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/pixelplay_secondary</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Tertiary brand color. -->
        <item name="colorTertiary">@color/pixelplay_tertiary</item>
        <item name="colorOnTertiary">@color/black</item>
        <!-- Background and surface colors. -->
        <item name="android:colorBackground">@color/pixelplay_background</item>
        <item name="colorSurface">@color/pixelplay_surface</item>
        <item name="colorOnBackground">@color/pixelplay_on_surface</item>
        <item name="colorOnSurface">@color/pixelplay_on_surface</item>
        <item name="colorOnSurfaceVariant">@color/pixelplay_on_surface_variant</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/pixelplay_background</item>

        <!-- Set the default font family -->
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="fontFamily">@font/montserrat</item>

        <!-- Customize your theme here. -->
    </style>

    <style name="Widget.AYRUS.Button" parent="Widget.Material3.Button">
        <item name="android:background">@drawable/bg_premium_button</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAppearance">?attr/textAppearanceTitleMedium</item>
        <item name="android:elevation">4dp</item>
    </style>

    <style name="Widget.AYRUS.TextInputLayout" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxBackgroundMode">none</item>
    </style>

    <style name="Widget.AYRUS.TextInputEditText" parent="android:Widget.EditText">
        <item name="android:background">@drawable/bg_premium_input</item>
        <item name="android:padding">16dp</item>
        <item name="android:textColor">@color/pixelplay_on_surface</item>
        <item name="android:textColorHint">@color/pixelplay_on_surface_variant</item>
    </style>

</resources>